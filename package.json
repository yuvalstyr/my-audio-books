{
	"name": "audiobook-wishlist-manager",
	"private": true,
	"version": "0.0.1",
	"description": "Personal audiobook wishlist management application",
	"type": "module",
	"scripts": {
		"dev": "DATABASE_PATH=./dev.db vite dev",
		"build": "npm run build:clean && npm run build:app",
		"build:clean": "rm -rf build",
		"build:app": "vite build",
		"build:production": "NODE_ENV=production npm run build",
		"start": "node scripts/start-production.js",
		"preview": "vite preview",
		"postinstall": "svelte-kit sync || echo 'SvelteKit sync skipped'",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:api": "vitest run src/routes/api/__tests__/",
		"test:integration": "vitest run src/routes/api/__tests__/integration.test.ts",
		"test:edge-cases": "vitest run src/routes/api/__tests__/edge-cases.test.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:seed": "npx tsx scripts/seed-db.ts",
		"railway:init": "node scripts/railway-init.js",
		"verify:deployment": "node scripts/verify-deployment.js",
		"migrations:check": "node scripts/check-migrations.js"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-node": "^5.3.2",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/postcss": "^4.1.13",
		"@tailwindcss/typography": "^0.5.16",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/better-sqlite3": "^7.6.13",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"daisyui": "^5.1.10",
		"jsdom": "^26.1.0",
		"postcss": "^8.5.6",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.13",
		"tsx": "^4.20.5",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"vite-plugin-pwa": "^1.0.3",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.13",
		"better-sqlite3": "^12.2.0",
		"drizzle-orm": "^0.44.5",
		"drizzle-kit": "^0.31.4"
	},
	"engines": {
		"node": ">=20.19.0",
		"npm": ">=10.0.0"
	}
}